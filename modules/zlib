CONFIG_ZLIB ?= y
modules-$(CONFIG_ZLIB) += zlib

zlib_version := 1.2.12
zlib_dir := zlib-$(zlib_version)
zlib_tar := zlib-$(zlib_version).tar.gz
zlib_url := https://www.zlib.net/$(zlib_tar)
zlib_hash := 91844808532e5ce316b3c010929493c0244f3d37593afd6de04f71821d5136d9

zlib_configure := \
	$(CROSS_TOOLS) \
	./configure \
	--prefix="/" \

zlib_target := \
	$(MAKE_JOBS) \
	$(CROSS_TOOLS) \
	DESTDIR="$(INSTALL)" \
	install \

zlib_libraries := libz.so.1

zlib_depends := $(musl_dep)
