modules-$(CONFIG_SWRAID) += mdadm

mdadm_depends := $(musl_dep)

mdadm_version := 4.2
mdadm_dir := mdadm-$(mdadm_version)
mdadm_tar := mdadm-$(mdadm_version).tar.gz
mdadm_url := https://mirrors.edge.kernel.org/pub/linux/utils/raid/mdadm/mdadm-$(mdadm_version).tar.gz
mdadm_hash := c83447797cccc772d1c389b1917a2bfda59bd7545480bdccd792b57b310b428e

mdadm_target := $(MAKE_JOBS) $(CROSS_TOOLS) DESTDIR=$(INSTALL) CXFLAGS="-DNO_LIBUDEV" mdadm

mdadm_output := mdadm
