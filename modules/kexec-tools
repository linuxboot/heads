# Inventory classification: mixed -Os/-O2/-Oz (O2:4 / Os:18 / Oz:87)

kexec-tools_target := \
	$(MAKE_JOBS) \
	$(CROSS_TOOLS) \
	DESTDIR="$(INSTALL)" \
	install \

kexec-tools_output := build/sbin/kexec

kexec-tools_depends := zlib zstd $(musl_dep)
